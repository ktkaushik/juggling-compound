<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li><a href="<%- pathTo.blogs() %>">blogs</a> <span class="divider">/</span></li>
    <li class="active"><a href="#">Edit blog</a></li>
</ul>

<div class="page-header">
    <h1>Edit blog</h1>
</div>

<% var form = formFor(blog, {action: pathTo.blog(blog), method: 'PUT', id: "blog-form", class: 'form-horizontal'}) %>
<%- form.begin() %>
<%- include _form %>
<div class="form-actions">
    <%- form.submit('<i class="icon-ok icon-white"></i> Update blog', {class: 'btn btn-primary'}) %> or
    <%- linkTo('Cancel', pathTo.blog(blog), {class: 'btn'}) %>
</div>
<%- form.end() %>
